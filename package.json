{
  "name": "worldbank",
  "version": "1.0.0",
  "description": "World Bank API interface",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && mkdir -p dist/static && cp src/static/countries.json dist/static/",
    "build:static": "tsx scripts/fetch-static.ts",
    "prepublishOnly": "npm run build:static && npm run build",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "worldbank",
    "world-bank",
    "api",
    "countries",
    "iso2"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20",
    "husky": "^9.1.7",
    "tsx": "^4",
    "typescript": "^5"
  }
}
